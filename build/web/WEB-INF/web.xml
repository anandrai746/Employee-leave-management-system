<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ControllerHome</servlet-name>
        <servlet-class>controllers.ControllerHome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerReports</servlet-name>
        <servlet-class>util.common.ControllerReports</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerLogin</servlet-name>
        <servlet-class>controllers.ControllerLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerAdmin</servlet-name>
        <servlet-class>controllers.ControllerAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerApplication</servlet-name>
        <servlet-class>controllers.ControllerApplication</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerHome</servlet-name>
        <url-pattern>/ControllerHome</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UtilController</servlet-name>
        <servlet-class>util.application.UtilController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UtilController</servlet-name>
        <url-pattern>/UtilController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerReports</servlet-name>
        <url-pattern>/ControllerReports</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerLogin</servlet-name>
        <url-pattern>/ControllerLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerAdmin</servlet-name>
        <url-pattern>/ControllerAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerApplication</servlet-name>
        <url-pattern>/ControllerApplication</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <!--ERROR PAGES STARTS-->
    <error-page>
        <error-code>400</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>405</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>
    <!--ERROR PAGES ENDS-->
</web-app>
